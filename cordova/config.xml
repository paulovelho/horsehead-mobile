<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1" id="ch.becompany.news" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BeCompany news</name>
    <description>
    A sample Apache Cordova application that reads news feeds.
  </description>
    <author email="javier.puerto@becompany.ch" href="https://becompany.ch">
    BeCompany GmbH
  </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <hook src="scripts/prepareAngular2App.js" type="before_prepare" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="hdpi" src="res/icon/android/icon-hdpi.png" />
        <icon density="ldpi" src="res/icon/android/icon-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-mdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-xhdpi.png" />
        <splash density="land-hdpi" src="res/screen/android/screen-land-hdpi.png" />
        <splash density="land-ldpi" src="res/screen/android/screen-land-ldpi.png" />
        <splash density="land-mdpi" src="res/screen/android/screen-land-mdpi.png" />
        <splash density="land-xhdpi" src="res/screen/android/screen-land-xhdpi.png" />
        <splash density="port-hdpi" src="res/screen/android/screen-port-hdpi.png" />
        <splash density="port-ldpi" src="res/screen/android/screen-port-ldpi.png" />
        <splash density="port-mdpi" src="res/screen/android/screen-port-mdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/screen-port-xhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="60" src="res/icon/ios/icon-60-60.png" width="60" />
        <icon height="120" src="res/icon/ios/icon-60@2x-60@2x.png" width="120" />
        <icon height="76" src="res/icon/ios/icon-76-76.png" width="76" />
        <icon height="152" src="res/icon/ios/icon-76@2x-76@2x.png" width="152" />
        <splash height="768" src="res/screen/ios/screen-1024-768.png" width="1024" />
        <splash height="1536" src="res/screen/ios/screen-1024@2x-768@2x.png" width="2048" />
        <splash height="480" src="res/screen/ios/screen-320-480.png" width="320" />
        <splash height="960" src="res/screen/ios/screen-320@2x-480@2x.png" width="640" />
        <splash height="1136" src="res/screen/ios/screen-640-568@2x.png" width="640" />
        <splash height="1024" src="res/screen/ios/screen-768-1024.png" width="768" />
        <splash height="2048" src="res/screen/ios/screen-768@2x-1024@2x.png" width="1536" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-device" spec="~1.1.6" />
</widget>
